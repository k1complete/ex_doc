#!/usr/bin/env elixir
Code.prepend_path Path.expand("../_build/dev/lib/markdown/ebin", __DIR__)
Code.prepend_path Path.expand("../_build/dev/lib/earmark/ebin", __DIR__)
Code.prepend_path Path.expand("../_build/dev/lib/ex_doc/ebin", __DIR__)
Code.prepend_path Path.expand("../_build/dev/lib/elixir/ebin", __DIR__)
Code.prepend_path Path.expand("../_build/dev/lib/exgettext/ebin", __DIR__)
Code.prepend_path Path.expand("../_build/dev/lib/l10n_iex/ebin", __DIR__)
Code.prepend_path Path.expand("../_build/dev/lib/l10n_mix/ebin", __DIR__)
Code.prepend_path Path.expand("../_build/dev/lib/l10n_elixir/ebin", __DIR__)
Code.prepend_path Path.expand("../_build/dev/lib/l10n_ex_unit/ebin", __DIR__)

if Code.ensure_loaded?(ExDoc.CLI) do
  ExDoc.CLI.run(System.argv)
else
  IO.puts :stderr, "Error: cannot generate docs because ExDoc.CLI module is not available. " <>
                   "Please run mix compile before or ensure ExDoc is available."
  exit(1)
end
